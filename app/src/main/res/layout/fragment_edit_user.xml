<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <EditText
            android:id="@+id/fragment_edit_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapWords|textAutoCorrect"
            android:textSize="@dimen/text_large_size"
            android:textStyle="bold"
            android:text="Nome"
            android:hint="Nome" />

        <EditText
            android:id="@+id/fragment_edit_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress|textAutoCorrect"
            android:textSize="@dimen/text_size"
            android:text="Email"
            android:hint="Email" />

        <EditText
            android:id="@+id/fragment_edit_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:textSize="@dimen/text_size"
            android:text="Telefone"
            android:hint="Telefone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fragment_edit_user_change_image"
                android:layout_margin="8dp"
                android:background="@color/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Perfil"
                android:drawableLeft="@drawable/ic_camera"
                android:drawableTint="@color/white"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="@dimen/text_small_size"/>

            <Button
                android:id="@+id/fragment_edit_user_change_back_image"
                android:layout_margin="8dp"
                android:background="@color/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Fundo"
                android:drawableLeft="@drawable/ic_image"
                android:drawableTint="@color/white"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="@dimen/text_small_size"/>

            <Button
                android:id="@+id/fragment_edit_user_delete"
                android:layout_margin="8dp"
                android:background="@color/red_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Deletar"
                android:drawableLeft="@drawable/ic_delete"
                android:drawableTint="@color/white"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="@dimen/text_small_size"/>

        </LinearLayout>

        <Button
            android:id="@+id/fragment_edit_user_save"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Salvar"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/ic_check"
            android:drawableTint="@color/white"
            android:textSize="@dimen/text_large_size"
            android:textColor="@color/white"
            android:background="@color/green"/>

    </LinearLayout>

</ScrollView>